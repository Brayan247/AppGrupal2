<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="@string/titulo"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtIndicaciones"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/nombreapp"
            android:textAlignment="center"
            android:textColor="#AC1C16" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/ejercicio"
            android:textAlignment="center"
            android:textColor="#090b87" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtValorIngresado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spnOpciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="@string/selecciongrados"
                android:entries="@array/opciones"
                android:textAlignment="center" />

        </LinearLayout>

        <Button
            android:id="@+id/btnConvertir"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:backgroundTint="#AC1C16"
            android:text="Convertir"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtRespuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El resultado es"
            android:textAlignment="center"
            android:textColor="#AC1C16" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>